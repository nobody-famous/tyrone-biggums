{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Go Server",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "bin/server",
                "cmd/server/main.go"
            ],
            "options": {
                "cwd": "${workspaceFolder}/go"
            },
            "group": "build"
        },
        {
            "label": "Run Go Server",
            "dependsOn": "Build Go Server",
            "type": "shell",
            "command": "./bin/server",
            "options": {
                "cwd": "${workspaceFolder}/go"
            },
            "presentation": {
                "group": "rust"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Rust Server",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release",
                "--bin",
                "server"
            ],
            "options": {
                "cwd": "${workspaceFolder}/rust"
            },
            "group": "build"
        },
        {
            "label": "Run Rust Server",
            "dependsOn": "Build Rust Server",
            "type": "shell",
            "command": "target/release/server",
            "options": {
                "cwd": "${workspaceFolder}/rust"
            },
            "presentation": {
                "group": "rust"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Node Server",
            "dependsOn": "Build Node Server",
            "type": "shell",
            "command": "node",
            "args": [
                "dist/index.js",
                "callback",
                "foo",
                "42069"
            ],
            "options": {
                "cwd": "${workspaceFolder}/typescript"
            },
            "presentation": {
                "group": "rust"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Node Server",
            "type": "shell",
            "command": "npx",
            "args": [
                "tsc",
            ],
            "options": {
                "cwd": "${workspaceFolder}/typescript"
            },
            "presentation": {
                "group": "rust"
            },
            "group": "build",
        },
        {
            "label": "Run Rust Player",
            "dependsOn": "Build Rust Player",
            "type": "shell",
            "command": "target/release/game_player",
            "args": [
                "100",
                "--host",
                "localhost"
            ],
            "options": {
                "cwd": "${workspaceFolder}/rust",
                "env": {
                    "CONNECTION_COUNT": "100"
                }
            },
            "presentation": {
                "group": "rust"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Rust Player",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release",
                "--bin",
                "game_player"
            ],
            "options": {
                "cwd": "${workspaceFolder}/rust"
            },
            "group": "build"
        }
    ]
}